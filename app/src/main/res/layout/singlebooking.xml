<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#BAC7DA"
        android:padding="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/tvbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Booking Id : "
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/tv_booking_id"
            android:layout_width="234dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tvbid"
            android:text="Qwertyfhhiiuhy"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <TextView
            android:id="@+id/bshopid"
            android:layout_width="131dp"
            android:layout_height="33dp"
            android:layout_below="@+id/tvbid"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:text="Shop Name :"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/booking_shop_id"
            android:layout_width="216dp"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="53dp"
            android:layout_toRightOf="@+id/bshopid"
            android:text="ABCDEFGH"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/bdate"
            android:layout_width="150dp"
            android:layout_height="33dp"
            android:layout_below="@+id/bshopid"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:text="Booking Date :"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/booking_date"
            android:layout_width="216dp"
            android:layout_height="33dp"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="15dp"
            android:layout_toRightOf="@+id/bdate"
            android:text="2020/02/20"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/btime"
            android:layout_width="150dp"
            android:layout_height="33dp"
            android:layout_below="@+id/bdate"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:text="Booking Time : "
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/booking_time"
            android:layout_width="216dp"
            android:layout_height="33dp"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="15dp"
            android:layout_toRightOf="@+id/btime"
            android:text=" 04:30"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>