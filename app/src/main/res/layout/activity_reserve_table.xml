<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReserveTable">


        <TextView
            android:id="@+id/title"
            android:layout_width="158dp"
            android:layout_height="84dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:text="Reservation"
            android:textAlignment="center"
            android:textColor="#010844"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.281"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/guests"
            android:layout_width="216dp"
            android:layout_height="44dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="170dp"
            android:text="How many Diners?"

            android:textColor="#817A7A"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.281"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/guestval"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guests"
            android:layout_marginStart="-206dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@+id/guests"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/pickdate"
            android:layout_width="216dp"
            android:layout_height="45dp"
            android:layout_below="@+id/guestval"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="37dp"
            android:text="Pick a date"
            android:textColor="#817A7A"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="290dp"
            android:layout_toRightOf="@+id/pickdate"
            android:background="@drawable/button_rounded_corners"
            android:text="PICK"
            android:textColor="#FDFCFC"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="123dp"
            android:layout_height="45dp"
            android:layout_below="@+id/pickdate"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"

            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/picktime"
            android:layout_width="216dp"
            android:layout_height="45dp"
            android:layout_below="@+id/txt_date"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="37dp"
            android:text="Pick a Time"
            android:textColor="#817A7A"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="440dp"
            android:layout_toRightOf="@+id/picktime"
            android:background="@drawable/button_rounded_corners"
            android:text="PICK"
            android:textColor="#FDFCFC"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="123dp"
            android:layout_height="45dp"
            android:layout_below="@+id/picktime"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_time"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="57dp"
            android:backgroundTint="#0E26AA"
            android:text="Book the table"
            android:textColor="#FAF8F8"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>