<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReserveTable">


        <TextView
            android:id="@+id/rname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="50dp"
            android:text="Customer Name :"
            android:textAlignment="center"
            android:textColor="#010844"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"

            />

        <EditText
            android:id="@+id/rval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-38dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/rname"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/table"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Table no :"
            android:textAlignment="center"
            android:textColor="#010844"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.281"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/tableval"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rval"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/table"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/guests"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Total Guests :"
            android:textAlignment="center"
            android:textColor="#010844"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.281"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/guestval"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableval"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/guests"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/btn_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guestval"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="66dp"

            android:text="SELECT DATE"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"

            />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_date"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="46dp"

            android:text="SELECT TIME"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"

            />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_time"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="104dp"
            android:backgroundTint="#020D5A"

            android:text="DONE"
            android:textAlignment="center"
            android:textColor="#FDFBFB"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"

            />


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>